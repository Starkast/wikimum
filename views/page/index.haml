%ul#sections
  - @page_groups.each do |char, _|
    %li
      %a{ href: "\##{char}" }= char

%h1 Innehållsförteckning
- @page_groups.each do |char, pages|
  %h2
    %a{ href: "\##{char}", name: char }= char
  %ul
    - pages.each do |page|
      %li
        %a{ href: "#{page.slug}" }= page.title
        - if page.concealed
          🔐
        = "(#{page.revision})"
        %span.description= page.description
